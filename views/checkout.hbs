<!-- Checkout Start -->
<form action="/users/placeorder" method="post" novalidate onsubmit="placeorder(event)">
  <div class="checkout">
    <div class="container">
      <div class="row">
        <div class="col-md-7">
          <div class="shipping-address">
            <h2>Shipping Address</h2>
            <div class="row">
              {{#each addresses}}
              <div class="col-md-12">
                <div class="payment-method">
                  <div class="custom-control custom-radio">
                    <input type="radio" class="custom-control-input" id="address-{{id}}" name="addressId" value="{{id}}"
                      {{#if isDefault}} checked {{/if}} />
                    <label class="custom-control-label" for="address-{{id}}"><strong>{{firstName}}
                        {{lastName}}</strong></label>
                  </div>
                  <div class="payment-content" id="address-{{id}}-show">
                    <p>
                      Email:
                      {{email}}
                      <br />
                      Mobile:
                      {{mobile}}
                      <br />
                      Address:
                      {{address}},
                      {{city}},
                      {{country}}<br />{{state}},
                      {{zipCode}}
                    </p>
                  </div>
                </div>
              </div>
              {{/each}}
              <div class="col-md-12">
                <div class="custom-control custom-radio">
                  <input type="radio" class="custom-control-input" id="ship-to-different-address" name="addressId"
                    value="0" />
                  <label class="custom-control-label" for="ship-to-different-address">Ship to
                    different address</label>
                </div>
              </div>
            </div>
          </div>

          <div class="different-address">
            <h2>Different Address</h2>
            <div class="row">
              <div class="col-md-6">
                <label>First Name</label>
                <input class="form-control" type="text" placeholder="First Name" name="firstName" required />
              </div>
              <div class="col-md-6">
                <label>Last Name</label>
                <input class="form-control" type="text" placeholder="Last Name" name="lastName" required />
              </div>
              <div class="col-md-6">
                <label>E-mail</label>
                <input class="form-control" type="text" placeholder="E-mail" name="email"
                  pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required />
              </div>
              <div class="col-md-6">
                <label>Mobile No</label>
                <input class="form-control" type="text" placeholder="Mobile No" name="mobile" required />
              </div>
              <div class="col-md-12">
                <label>Address</label>
                <input class="form-control" type="text" placeholder="Address" name="address" required />
              </div>
              <div class="col-md-6">
                <label>Country</label>
                <select class="custom-select" name="country">
                  <option selected>United States</option>
                  <option>Afghanistan</option>
                  <option>Albania</option>
                  <option>Algeria</option>
                </select>
              </div>
              <div class="col-md-6">
                <label>City</label>
                <input class="form-control" type="text" placeholder="City" name="city" />
              </div>
              <div class="col-md-6">
                <label>State</label>
                <input class="form-control" type="text" placeholder="State" name="state" />
              </div>
              <div class="col-md-6">
                <label>ZIP Code</label>
                <input class="form-control" type="text" placeholder="ZIP Code" name="zipCode" />
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-5">
          {{#with cart}}
          <div class="checkout-summary">
            <h2>Cart Total</h2>
            <div class="checkout-content">
              <h3>Products</h3>
              {{#each items}}
              <p>{{product.name}} x {{quantity}}<span>${{total}}</span></p>
              {{/each}}
              <p class="sub-total">Sub Total<span>${{subtotal}}</span></p>
              <p class="ship-cost">Shipping Cost<span>${{shipping}}</span></p>
              <h4>Grand Total<span>${{total}}</span></h4>
            </div>
          </div>
          {{/with}}

          <div class="checkout-payment">
            <h2>Payment Methods</h2>
            <div class="payment-methods">
              <div class="payment-method">
                <div class="custom-control custom-radio">
                  <input type="radio" class="custom-control-input" id="payment-paypal" name="payment" value="PAYPAL" />
                  <label class="custom-control-label" for="payment-paypal">Paypal</label>
                </div>
                <div class="payment-content" id="payment-paypal-show">
                  <p>
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras
                    tincidunt orci ac eros volutpat maximus lacinia quis diam.
                  </p>
                </div>
              </div>
              <div class="payment-method">
                <div class="custom-control custom-radio">
                  <input type="radio" class="custom-control-input" id="payment-cod" name="payment" value="COD"
                    checked />
                  <label class="custom-control-label" for="payment-cod">Cash on
                    Delivery</label>
                </div>
                <div class="payment-content" id="payment-cod-show">
                  <p>
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras
                    tincidunt orci ac eros volutpat maximus lacinia quis diam.
                  </p>
                </div>
              </div>
            </div>
            <div class="checkout-btn">
              <button>Place Order</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
<!-- Checkout End -->